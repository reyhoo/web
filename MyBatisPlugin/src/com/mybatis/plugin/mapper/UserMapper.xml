		<select id="findWithCondition" resultMap="userMap">
		select * from t_user
		<trim prefix="where" prefixOverrides="and">
			<if test="maxId != null and maxId > 0">
				and id &lt;= #{maxId}
			</if>
			<if test="minId != null and minId > 0">
				and id &gt;=#{minId}
			</if>
		</trim>
		order by id desc
	</select>
</mapper>